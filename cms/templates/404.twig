{% extends "_default" %}
{% set title = "404" %}
{% set pageClass = "layout-writing__wrapper" %}

{% block content %}
    <section class="row-triangle__wrapper">
        <div class="row-triangle__content">

            <h1>Whoopie - not found :(</h1>
            <p>Sorry for not having a more delightful error page right now. There will be one – promise!</p>
            <p><a href="{{ siteUrl }}">Go back to home</a></p>

        </div>


    </section>

{% endblock content %}
